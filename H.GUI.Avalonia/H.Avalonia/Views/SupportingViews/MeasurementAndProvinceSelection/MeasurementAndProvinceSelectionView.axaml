<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             x:Class="H.Views.SupportingViews.MeasurementAndProvinceSelection.MeasurementAndProvinceSelectionView">
  
  <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Spacing="10">

    <!-- Dropdown for Measurement Systems -->
    <TextBlock Text="Select Measurement Unit" FontSize="14"/>
    <ComboBox Items="{Binding MeasurementSystems}" 
              SelectedItem="{Binding SelectedMeasurementSystem}" 
              Width="200"/>

    <!-- Dropdown for Province Selection -->
    <TextBlock Text="Select Province" FontSize="14"/>
    <ComboBox Items="{Binding Provinces}" 
              SelectedItem="{Binding SelectedProvince}" 
              Width="200"/>

    <!-- Button to Continue to Next -->
    <Button Content="Next" Command="{Binding NextCommand}" Width="200"/>
    
  </StackPanel>

</UserControl>
